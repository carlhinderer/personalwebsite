#disqus_thread
  :javascript
    var disqus_shortname = 'carlhinderersblog'; 

    (function() {
      var dsq = document.createElement('script'); 
      dsq.type = 'text/javascript'; 
      dsq.async = true;
      dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
      (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).
        appendChild(dsq);
    })();

  %noscript
    = 'Please enable Javascript to enable the '
    = link_to 'comments powered by Disqus.', 'http://disqus.com/?ref_noscript'

  = link_to 'http://disqus.com', {class: 'dsq-brlink'} do
    = 'Blog comments powered by '
    %span{class: 'logo-disqus'}= 'Disqus'
