!!! 5

%html
  %head
    %title #{@title || 'Carl Hinderer\'s Blog'}
    = stylesheet_link_tag 'application', media: "all", "data-turbolinks-track" => true
    = javascript_include_tag 'application', "data-turbolinks-track" => true
    = csrf_meta_tags

  %body
    #wrap
      .container
        = render :partial => 'navigation_bar'
        = render :partial => 'message_bar'
        .row
          .col-md-2
          .col-md-8
            =yield
          .col-md-2
      #push
        
    #footer
      .container
        = render :partial => 'footer'
