%h3 Admin Page

%table.post_admin_table
  %tr
    %th Title
    %th Created On
    %th Edit
    %th Delete
  - @all_posts.each do |post|
    %tr
      %td= post.title
      %td= post.posted
      %td= link_to "Edit", edit_post_path(post)
      %td= link_to "Delete", post_path(post), :method => :delete,
        :confirm => "Are you sure you want to delete the post '#{post.title}'?"

= link_to 'Add new post', new_post_path, {class: 'new_post_link'}
