%h3.new_comment_header Add comment for '#{@post.title}'

= form_for(@comment, :url => post_comments_path(@post)) do |f|

  - unless @comment.errors.empty?
    #warning
      %ul
        - @comment.errors.full_messages.each do |error|
          %li= error

  .form-group
    = f.label :author
    %br
    = f.text_field :author, :size => 40
  .form-group
    = f.label :author_website
    %br
    = f.text_field :author_website, :size => 40
  .form-group
    = f.label :body, 'Comment'
    %br
    = f.text_area :body, :size => '40x10'
  .form-group
    = f.submit 'Add Comment'

.form-group
  = button_to 'Cancel', post_path(@post), :method => :get
